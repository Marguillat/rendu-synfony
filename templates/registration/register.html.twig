{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            {{ flash_error }}
        </div>
    {% endfor %}

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'max-w-md mx-auto bg-white p-8 border border-gray-300 rounded shadow-md'}}) }}
        <h1 class="text-2xl font-bold mb-4">S'enregistrer</h1>

        <div class="mb-4">
            {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(registrationForm.username, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_errors(registrationForm.username) }}
        </div>

        <div class="mb-4">
            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="mb-4">
            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="mb-4">
            {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'flex items-center'}}) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Register
            </button>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}
