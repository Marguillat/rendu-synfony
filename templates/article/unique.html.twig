{% extends 'base.html.twig' %}

{% block metaTitle %}
	{{article.title}}
{% endblock %}
{% block title %}Unique article
{% endblock %}

{% block body %}
	<div class="flex flex-col gap-8">
		<div class="flex gap-24">
			<img src="{{asset('images/placeholder.svg')}}" class="rounded-lg aspect-square object-cover w-2/5"/>
			<div class="flex flex-col gap-8">
				<h2 class="text-3xl font-bold">{{article.title}}</h2>
				<span>
					<i class="fa-solid fa-user"></i>
					Auteur :
					{{article.author.email}}
				</span>
				<span class="text-gray-400">
					<i class="fa-solid fa-pencil"></i>
					{{article.createdAt|date('d/m/Y')}}
				</span>
			</div>
			<a class="py-2.5 px-5 me-2 text-gray-900 bg-white fit-content rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700" href="{{ path('app_article_edit', {id: article.id}) }}" style="transition: all 0.3s ease-in-out;">
				<i class="fa-solid fa-pen-to-square"></i>
				Editer
			</a>
			<a class="py-2.5 px-5 me-2 text-gray-900 bg- fit-content rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700" href=" {{ path('app_article_delete', {id: article.id} ) }}">
				<i class="fa-solid fa-trash"></i>
				Supprimer
			</a>
		</div>
		<article>{{ article.content }}</article>
	</div>
{% endblock %}
