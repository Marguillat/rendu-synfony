{% extends 'base.html.twig' %}

{% block metaTitle %}
	new article
{% endblock %}
{% block title %}new article
{% endblock %}

{% block body %}
	<div class="flex flex-col items-center gap-8 p-8">
		{{ form_start(form, { attr: { class: 'w-full max-w-lg' } }) }}
		<div class="text-red-500 text-sm mb-4">
			{{ form_errors(form) }}
		</div>

		<div class="space-y-6">
			<div>
				{{ form_row(form.title, {
                    label_attr: { class: 'block text-sm font-medium text-gray-700' },
                    attr: { class: 'mt-1 block w-full h-8 px-2 rounded-md border border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' }
                }) }}
			</div>
			<div>
				{{ form_row(form.content, {
                    label_attr: { class: 'block text-sm font-medium text-gray-700' },
                    attr: { class: 'field-sizing-content min-h-32 mt-1 p-2 block w-full rounded-md border border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' }
                }) }}
			</div>
		</div>
		<div class="mt-6">
			{{ form_row(form.save, {
                attr: { class: 'w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2' }
            }) }}
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
